<html>
    <head>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <form action="http://localhost:3000/user/signup" method="POST">
            <label>Name:</label>
           <span><input type="text" name="name" ></span> 
                <br><br>
            <label>Password:</label>
           <span><input type="password" name="password"></span> 
                <br><br>
            <label>Email:</label>
            <span><input type="email" name="email"></span>
                <br><br>
             <label>Phone number:</label>
            <span><input type="tel" name="phone_number"></span>
                <br><br>
            <label>Car number:</label>
            <span><input type="text" name="car_number"></span> <!--text not number-->
                <br><br>
                <label>SSID:</label>
                <span><input type="text" name="ssid"></span> <!--number-->
                    <br><br>
        
            <input  type="submit" value="Register" onclick="reg()">
            
            </form>

            {{#if success}}
            <h3>successful registration</h3>
            <script>
                setTimeout(function () {
                    window.location = "http://localhost:3000/user/login";
                }, 3000)
            </script>
            {{else}}
            <ul class="people_list">
                {{#each errors}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            {{/if}}
    </body>
</html>
